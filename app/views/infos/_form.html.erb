<%= simple_form_for([current_user, @info]) do |f| %>
  <%= f.input :spiritual_name %>
  <%= f.input :image %>
  <%= f.input :webpage %>
  <%= f.input :phone, label: "phone number" %>
  <%= f.input :public_contact, label: "allow to show your contact information?" %>
  <%= f.input :introduction, input_html: {:rows => 10, placeholder: "maximum 1000 characters"} %>

  <%= f.submit class: "btn btn-primary" %>

<% end %>