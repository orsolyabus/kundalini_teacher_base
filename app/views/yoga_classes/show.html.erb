<div class="d-flex justify-content-center">
  <div >
    <h2><%= @yoga_class.title %></h2>

    <div class="card" style="max-width: 700px">
      <div class="card-body">
        <h4 class="card-title"><small> teacher:</small> <%= @yoga_class.user.info&.spiritual_name %> - <%= @yoga_class.user.name %></h4>
        <p><%= @yoga_class.description %></p>
        <p>location: <%= @yoga_class.location.location_list_view %></p>
        <p>class type: <%= @yoga_class.schedule.class_type %></p>
        <p><%= @yoga_class.schedule.show_time %></p>
        <% if current_user %>
          <% if (can? :crud, @yoga_class) %>
            <div class="d-flex justify-content-between">
              <%= link_to "Edit class", edit_yoga_class_path(@yoga_class), class: "btn btn-primary" %>
              <%= link_to 'Delete class', yoga_class_path(@yoga_class), method: :delete, data: { confirm: 'Are you certain?' }, class: "btn btn-danger" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>