<div class="card shadow" style="height: 100%">
  <div class="card-body">
    <h5 class="card-title">
      
      <% if yc.schedule.class_type == "regular" %>
      <i class="far fa-calendar text-dark"></i>
      <% elsif yc.schedule.class_type == "workshop"%>
      <i class="far fa-calendar-plus text-success"></i>
      
      <% elsif yc.schedule.class_type == "course"%>
        <i class="far fa-calendar-alt text-warning"></i>
      <% end %>
      <%= link_to(yc.title, yoga_class_path(yc))%>
    </h5>
    <p><%= yc.location.location_list_view %></p>
    <p><%= yc.schedule.show_time %></p>
  </div>
</div>
